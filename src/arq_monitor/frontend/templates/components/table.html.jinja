<table>
    <thead><tr>
        <th>job_id</th>
        <th>enqueue_time</th>
        <th>function</th>
    </tr></thead>
    <tbody>
        {% for row in data %}
            <tr>
                <td><a onclick="document.body.appendChild(document.importNode(document.getElementById('{{ row.job_id }}').content, true)); document.getElementById('dialog-{{ row.job_id }}').showModal()">{{ row.job_id[:4]|e }}...</a></td>
                <td>{{ row.enqueue_time|e }}</td>
                <td><code>{{ row.function|e }}</code></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% for row in data %}
    <template id="{{ row.job_id }}">
        <dialog id="dialog-{{ row.job_id }}" >
            <div class="terminal-card">
                <header>job details</header>
                <div>
                    <table>
                        <thead>
                            <th>variable</th>
                            <th>value</th>
                        </thead>
                        <tbody>
                            {% for name, val in row.items() %}
                                <tr><td>{{ name|e }}</td><td>{{ val|e }}</td></tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <form method="dialog">
                        <button type="submit" class="btn btn-default">close</button>
                    </form>
                </div>
            </div>
        </dialog>
    </template>
{% endfor %}
